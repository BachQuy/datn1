@model IEnumerable<ProductModel>
@{
	ViewData["Title"] = @ViewBag.keyworld;
	Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="col-sm-3">
	@Html.Partial("_SlidebarPartial")
</div>

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">@ViewBag.keyworld</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<a>
						<div class="single-products">
							<div class="productinfo text-center">
								<a asp-action="Detail" asp-controller="Product" asp-route-Id="@item.Id" />
								<img src="~/media/products/@item.Image" alt="" />
								<h2>$@item.Price.ToString("#,##0 VNĐ")</h2>
								<p>@item.Name</p>
								<p>Danh mục : @item.Category.Name</p>
								<p>Thương hiệu : @item.Brand.Name</p>
								@if (item.Quantity > 0)
								{
									<a href="#" class="btn btn-default add-to-cart" asp-controller="Cart" asp-action="Add" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
								}
								else
								{
									<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Hết hàng</a>
								}
								
							</div>
						</div>
					</a>

					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
						</ul>
					</div>
				</div>
			</div>
		}



	</div><!--features_items-->

</div>